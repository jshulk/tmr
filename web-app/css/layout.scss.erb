@import "mixins";
@font-face {
  font-family: 'questrialregular';
  src: url("<%= asset_path '/assets/fonts/questrial-regular-webfont.eot' %>");
  src: url("<%= asset_path '/assets/fonts/questrial-regular-webfont.eot?#iefix' %>") format('embedded-opentype'),
       url("<%= asset_path '/assets/fonts/questrial-regular-webfont.woff' %>") format('woff'),
       url("<%= asset_path '/assets/fonts/questrial-regular-webfont.ttf' %>") format('truetype'),
       url("<%= asset_path '/assets/fonts/questrial-regular-webfont.svg#questrialregular' %>") format('svg');
  font-weight: 400;
  font-style: normal;
}
body {
  background: #303030;
  color: #ccc;
  font-family: 'questrialregular', helvetica neue, arial, sans-serif;
}
li {
  list-style: none;
}
// Global notice
.notice {
  text-align: center;
  .notice-inner {
    background: #E67E22;
    @include rounded-corners(0 0 3px 4px);
    color: #FFF;
    font-size: 12px;
    text-shadow: 0 1px 0#A83204;
    width: auto;
  } 
}
// Rigs
.rigs {
  margin: 30px 0;
  overflow: hidden;

  .rig {
    @include rounded-corners(4px); 
    -webkit-box-shadow: 0 2px 4px #000;
    -moz-box-shadow: 0 2px 4px #000;
    box-shadow: 0 2px 4px #000;
    height: 328px;
    margin: 0 0 20px;
    overflow: hidden;
    position: relative;
    width: 300px;
    &:hover {
      // border-top: 1px solid #00e4ff;
      // margin-bottom: 19px;
    }
    .rig-cover {
      left: 0;
      position: absolute;
      top: 0;
      z-index: 0;
    }
    .parts-count {
      position: absolute;
      right: 0px;
      top: 10px;
      z-index: 1;
      background: rgba(0, 0, 0, 0.74);
      font-size: 10px;
      padding: 1px 4px 0 6px;
      @include rounded-corners(2px 0 0 2px);
      line-height: 15px;
    }
    .meta {
      background: rgba(0, 0, 0, 0.85);
      border-top: 1px solid #555;
      -webkit-box-shadow: 0 -1px 0 #030303;
      -moz-box-shadow: 0 -1px 0 #030303;
      box-shadow: 0 -1px 0 #030303;
      bottom: 0;
      height: 60px;
      padding: 16px 15px 12px;
      position: absolute;
      width: 270px;
      z-index: 1;
      .user-ava {
        border: 3px solid #00e4ff;
        float: left;
        height: 50px;
        margin-right: 12px;
        overflow: hidden;
        width: 50px;
        @include rounded-corners(50%);
      }
      .rig-title {
        color: #fff;
        font-size: 18px;
        font-weight: lighter;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
    }
  }
}
.header {
  background: #1c1c1c;
  border-bottom: 3px solid #e67e22;
  height: 67px;
  position: relative;
  text-align: center;
  z-index: 9999;

  .logo {
    margin: 15px 0 0;
  }

  ul.right-block {
    position: absolute;
    right: 15px;
    top: 15px;
    li {
      float: left;
      margin: 0 15px 0 0;
    }
    .user {
      background: url("/assets/global-sprite.png") 2px 0 no-repeat;
      @include rounded-corners(3px);
      -webkit-box-shadow: 0 0 3px #000, 0 -1px 0 rgba(255, 255, 255, 0.92);
      -moz-box-shadow: 0 0 3px #000, 0 -1px 0 rgba(255, 255, 255, 0.92);
      box-shadow: 0 0 3px #000, 0 -1px 0 rgba(255, 255, 255, 0.92);
      cursor: pointer;
      display: block;
      height: 27px;
      margin: 7px 26px 0 20px;
      overflow: hidden;
      width: 28px;
    }
    .menu-trigger {
      height: 53px;
      position: relative;
      .menu {
        -webkit-animation: translate-fade-out-y 0.2s;
        animation: translate-fade-out-y 0.5s;
        @include rounded-corners(3px);
        background: #fff;
        background: rgba(255, 255, 255, 0.93);
        opacity: 0;
        visibility: hidden;
        margin: 10px 0 0;
        -webkit-transition: visibility 0.2s 0.2s, opacity 0.2s 0;
        transition: visibility 0.2s 0.2s, opacity 0.2s 0;
        min-height: 70px;
        padding: 20px 20px 34px;
        position: absolute;
        right: 0;
        top: 43px;
        min-width: 150px;

        label {
          color: #7a7a7a;
          float: right;
          font-size: 12px;
          margin-left: 8px;
        }

        input {
          margin: 0 0 20px;
          padding: 12px 10px;
          
          &#remember_me {
            float: right;
            margin-top: 3px;
          }

          &.btn {
            float: left;
            padding: 8px 29px;
          }
        }

        .remember-me {
          float: right;
          margin-top: 9px;
        }

        &:before {
          border-bottom: 7px solid rgba(255, 255, 255, 0.93);
          border-left: 7px solid rgba(0, 0, 0, 0);
          border-right: 7px solid rgba(0, 0, 0, 0);
          content: '';
          position: absolute;
          right: 33px;
          top: -7px;
        }
      }
      &:hover .menu {
        display: block;
        visibility: visible;
        opacity: 1;
        -webkit-animation: translate-fade-in-y 0.5s;
        animation: translate-fade-in-y 0.5s;
      }

      // User drop down
      .user-name {
        @include rounded-corners(0 0 3px 3px);
        background: #ccc;
        bottom: 0;
        color: #000;
        font-size: 12px;
        left: 0;
        padding: 7px 20px;
        position: absolute;
        width: 150px;
      }
    }
  }   
}

// Button 
.btn {
  background: #65ac00;
  border: 0;
  @include box-shadow(0 3px 0 #4e8500);
  color: #fff;
  @include rounded-corners(3px);
  padding: 9px 23px;
  text-shadow: none;

  &:hover {
    background: #6DB900;
    color: #fff;
    text-decoration: none;
  }

  &:active {
    position: relative;
    top: 1px;
  }

  &.primary {
    background: #d35400;
    @include box-shadow(0 3px 0 #903900);
    text-transform: uppercase;
  }
}

// Modal windows
// Create Rig Modal
#add-rig-modal {
  background: #d7d7d7;
  border: 0;
  @include rounded-corners(0);
  margin-left: -330px;
  padding: 160px 20px 0;
  width: 620px;
  
  .rig-cover-input {
    background: #000;
    left: 0;
    overflow: hidden;
    padding: 50px 0;
    position: absolute;
    text-align: center;
    top: 0;
    width: 660px;
    z-index: 1;
    .rig-cover-image {
      display: none;
      position: absolute;
      left: 0;
      top: 0;
      width: 660px;
      z-index: 2;
    }
    p {
      @include rounded-corners(5px);
      border: 2px dashed #919191;
      font-size: 20px;
      margin: 0 auto;
      padding: 30px 0;
      width: 500px;
    }
    input {
      width: 290px;
    }
    input[type=file] {
      cursor: pointer;
      height: 184px;
      left: 0;
      opacity: 0;
      position: absolute;
      top: 0;
      width: 660px;
      z-index: 3;
    }
  }
  .right {
    float: left;
    padding-left: 20px;
    width: 280px;
  }
  .new_rig, .new_rig_comp {
    float: left;
    padding: 50px 0 0;
    width: 290px;
    input {
      display: block;
      font-size: 14px;
      padding: 10px 16px;
      width: 240px;
    }
    textarea#rig_desc {
      height: 150px;
      margin: 10px 0 20px;
      padding: 10px 16px;
      width: 240px;
    }
    .btn {
      width: 273px;
    }
  }

  .comp-images {
    background: #FFF;
    display: none;
    @include rounded-corners(3px);
    box-shadow: 0 1px 1px #B7B7B7;
    max-height: 220px;
    overflow: hidden;
    padding: 16px 0 10px 14px;
    position: absolute;
    right: 43px;
    top: 275px;
    width: 258px;
    z-index: 100;
    
    .comp-list { margin: 0; overflow: hidden; }
    .comp {
      @include rounded-corners(3px);
      border: 1px solid #CFCFCF;
      float: left;
      height: 70px;
      margin: 0px 10px 10px 0;
      overflow: hidden;
      width: 72px;
    }
  }

  ul.added-comps {
    clear: both;
    margin: 0;
    overflow: hidden;
    width: 292px;
    li {
      background: #fff;
      border: 1px solid #ccc;
      -webkit-box-shadow: 0 1px 0px rgba(136, 136, 136, 0.11);
      -moz-box-shadow: 0 1px 0px rgba(136, 136, 136, 0.11);
      box-shadow: 0 1px 0px rgba(136, 136, 136, 0.11);
      @include rounded-corners(3px);
      float: left;
      height: 80px;
      margin: 0 21px 20px 0;
      position: relative;
      overflow: hidden;
      width: 123px;

      span.processing {
        background: rgba(0, 0, 0, 0.7);
        height: 80px;
        left: 0;
        position: absolute;
        top: 0;
        width: 125px;
        .progress {
          bottom: -11px;
          height: 8px;
          left: 7px;
          position: absolute;
          width: 110px;
        }
      }
    }
  }

  .file-upload-input {
    background: #656565 url("/assets/global-sprite.png") 14px -68px no-repeat;
    @include rounded-corners(3px);
    height: 42px;
    margin: 20px 0 0;
    position: relative;
    width: 272px;

    input[type=file] {
      opacity: 0;
      position: relative;
      z-index: 90;
    }

    p {
      color: #fff;
      left: 50px;
      position: absolute;
      top: 11px;
    }
  }

  // Hiding some inputs in the modal
  #rig_comp_remote_image_url, .add-comp-btn.btn {
    display: none;
  }
} //add-rig-modal ends

#show-rig-modal {
  background: none;
  border: 0;
  @include rounded-corners(0);

  .modal-body {
    margin-left: -50px;
    height: 600px;
    overflow: hidden;
    padding: 0;
    position: relative;
    width: 660px;
    .loading-overlay {
      background: rgba(0, 0, 0, 0.79) url('loading.gif') 50% no-repeat;
      height: 100%;
      width: 100%;
      position: absolute;
      left: 0;
      top: 0;
      z-index: 1;
    }
    img.rig-cover-image {
      width: 660px;
    }
    .meta {
      border-top: 1px solid rgba(255, 255, 255, 0.43);
      bottom: 0;
      left: 0;
      padding: 0 0 127px;
      position: absolute;
      width: 660px;
      z-index: 2;
      .title {
        background: rgba(0, 0, 0, 0.53);
        border-radius: 3px;
        color: #FFF;
        font-size: 15px;
        font-weight: 700;
        left: 119px;
        padding: 3px 9px;
        position: absolute;
        text-shadow: 0 1px 0 #000;
        top: -36px;
      }
      .user-ava {
        border: 3px solid #00e4ff;
        @include rounded-corners(50%);
        left: 20px;
        overflow: hidden;
        position: absolute;
        top: -43px;
      }
      ul.rig-comps {
        left: 94px;
        position: absolute;
        top: 12px;
        li {
          border-radius: 3px;
          @include box-shadow(0 1px 1px rgba(0, 0, 0, 0.41));
          float: left;
          height: 100px;
          margin-right: 20px;
          overflow: hidden;
          width: 100px;
        }
      }
    }
  }
} //show-rig-modal ends

// Overrides
.modal-body {
  position: static;
}
.modal.fade.in {
  top: 70px;
}

// Animations
@-webkit-keyframes translate-fade-in-y {
  0% { 
    opacity: 0; 
    -webkit-transform: translateY(10px); 
    transform: translateY(10px); 
  }
  100% { 
    opacity: 1;
    visibility: visible;
    -webkit-transform: translateY(0); 
    transform: translateY(0); 
  }
}
@keyframes translate-fade-in-y {
  0% { 
    opacity: 0; 
    -webkit-transform: translateY(10px); 
    transform: translateY(10px); 
  }
  100% { 
    opacity: 1; 
    visibility: visible;
    -webkit-transform: translateY(0); 
    transform: translateY(0); 
  }
}
@-webkit-keyframes translate-fade-out-y {
  0% { 
    opacity: 1; 
    -webkit-transform: translateY(0px); 
    transform: translateY(0px); 
  }
  100% { 
    opacity: 0; 
    -webkit-transform: translateY(10px); 
    transform: translateY(10px); 
  }
}
@keyframes translate-fade-out-y {
  0% { 
    opacity: 1; 
    -webkit-transform: translateY(0px); 
    transform: translateY(0px); 
  }
  100% { 
    opacity: 0; 
    -webkit-transform: translateY(10px); 
    transform: translateY(10px); 
  }
}
